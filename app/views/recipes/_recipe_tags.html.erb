<div id="tags">

  <div class="mb-2">
        <% @recipe.recipe_tags.each do |recipe_tag| %>
            <span class="tag is-large">
              <%= recipe_tag.tag %>
              <%= link_to "Delete", recipe_remove_tag_path(@recipe, recipe_tag), method: :delete, class: "delete", data: { "turbo-method": :delete } %>
            </span>
        <% end %>
  </div>

  <%= form_tag recipe_add_tag_path(@recipe.id) do %>
    <div class="field has-addons">
      <div class="control">
        <input class="input" type="text" name="tag" placeholder="Add Tag">
      </div>
      <div class="control">
        <input type="submit" class="button is-primary" value="Add">
      </div>
    </div>
  <% end %>
</div>